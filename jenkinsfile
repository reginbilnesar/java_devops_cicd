@Library('my-shared-library') _ 
pipeline {
    agent any 

    parameters{
        choice{name: 'action', choices: 'create\ndelete', description: 'Choose create/Destory'}
    }

    stages {

        when {expression{
            param.action == 'create'
        }}
        stage('Git Checkout') {

            steps {
                
                script{
                  
                   gitCheckout(
                    branch: "main",
                    url: "https://github.com/reginbilnesar/java_devops_cicd.git"  
                   )
                }
                
            }
            
        }
        stage('Unit Test using maven') {
             when {expression{
            param.action == 'create'
        }}
            steps {
                dir('mrdevops_java_app-main') {  
                    mvnTest()
                }
            }
        }
        stage('integration Test using maven') {
             when {expression{
            param.action == 'create'
        }}
            steps {
                dir('mrdevops_java_app-main') {  
                    mvnintegration()
                }
            }
        }
        stage('Quality Test using maven-sonar') {
             when {expression{
            param.action == 'create'
        }}
            steps {
                dir('mrdevops_java_app-main') {  
                    staticcodeanalysis()
                }
            }
        }
    }
}
